<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unicauca.checkbox.MainActivity">

    <CheckBox
        android:id="@+id/amarillo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/amarillo"

        />

    <CheckBox
        android:id="@+id/azul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amarillo"
        android:layout_centerInParent="true"
        android:text="@string/azul" />

    <CheckBox
        android:id="@+id/rojo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/azul"
        android:layout_centerInParent="true"

        android:text="@string/rojo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/amarillo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:text="Selecciona los colores que deseas observar:" />

</RelativeLayout>
